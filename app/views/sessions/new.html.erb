<h1>log in</h1>

<%= simple_form_for(:session, url: login_path) do |f| %>  
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
